<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/bindingsCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="350dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:fillViewport="false"
        android:keepScreenOn="false"
        android:measureAllChildren="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/layoutOfCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:layoutMode="clipBounds"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/fiveCard"
                android:layout_width="match_parent"
                android:layout_height="269dp"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:maxHeight="2dp"
                android:minHeight="1dp"
                android:scaleType="centerInside"
                android:scaleX="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/five"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/crossCard"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_gravity="clip_horizontal"
                android:scaleType="centerInside"
                android:scaleX="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/cross"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/magneteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:scaleType="centerInside"
                android:scaleX="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/magnet"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/bindingCardOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/five" />

            <ImageView
                android:id="@+id/bindingCardTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/bindingCardThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/magnet" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addCardBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:width="2dp"
        android:height="2dp"
        android:backgroundTint="#FF0000"
        android:text="@string/addCardBtnPlus"
        android:textSize="20sp"
        android:translationY="600dp"
        app:cornerRadius="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/bindingsCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bindingsCards" />

</androidx.constraintlayout.widget.ConstraintLayout>